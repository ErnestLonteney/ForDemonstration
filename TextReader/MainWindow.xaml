<Window x:Class="TextReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <StackPanel VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
            <Button Content="Cancel" Margin="0,0,20,0" Width="100" Click="Button_Click_1"/>
            <Button Margin="0,0,50,0" Content="Browse" Width="100" Click="Button_Click"/>
            <TextBox x:Name="tbFileName" IsReadOnly="True" Width="400"/>
        </StackPanel>
        <TextBox x:Name="tbMain" IsReadOnly="True" Height="350" TextWrapping="Wrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"></TextBox>
        <ProgressBar Margin="0,20, 0, 0" Height="40" x:Name="pbMain"/>
    </StackPanel>
</Window>
